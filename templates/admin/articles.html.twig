{% extends "baseAdmin.html.twig" %}

{% block title %} Articles {% endblock %}

{% block content %}
    <!--<div><a href="/ClementGrenierDesrousseaux_P5_06052022/admin/articles/create">Cr√©er un article</a></div>-->
    <div class="admin-display-list-articles">
        <table class="admin-display-article">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th class="display-none">Date de publication</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            {% for article in articles %}
                <tr class="admin-display-article-content">
                    <td>{{ article.idPost }}</td>
                    <td>{{ article.titlePost }}</td>
                    <td class="display-none">{{ article.datePost | date('d/m/Y') }}</td>
                    <td>
                        <div class="admin-display-article-content-link">
                            <a href="/ClementGrenierDesrousseaux_P5_06052022/admin/article/{{ article.idPost }}">Modifier</a>
                        </div>
                    </td>
                    <td>
                        <div class="admin-display-article-content-link">
                            <a href="/ClementGrenierDesrousseaux_P5_06052022/admin/article/delete/{{ article.idPost }}">Supprimer</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
