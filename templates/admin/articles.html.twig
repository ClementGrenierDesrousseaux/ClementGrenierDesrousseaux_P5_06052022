{% extends "base.html.twig" %}

{% block title %} Page d'accueil {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="public/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"
          rel="stylesheet"/>
{% endblock %}

{% block scripts %}
    <script src="public/js/script.js"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-lg-1 col-md-2 bg-primary text-light">
                <h2>Admin</h2>
                <ul>
                    <li><a href="../admin/articles" class="text-decoration-none text-light">Accueil</a></li>
                    <li>Articles</li>
                    <li>Commentaires</li>
                </ul>
            </div>
            <div class="col-lg-11 col-md-10">


                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Date</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for article in articles %}
                                <tr>
                                    <th scope="row">{{ article.id }}</th>
                                    <td>{{ article.Title }}</td>
                                    <td>{{ article.Date }}</td>
                                    <td>
                                        <button><a href="../admin/article/{{ article.id }}">Modifier</a></button>
                                    </td>
                                    <td>
                                        <button>Supprimer</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}
