{% extends "baseAdmin.html.twig" %}

{% block title %} Modifier un article {% endblock %}

{% block content %}

    {% for article in articles %}

        <div class="row mt-3 mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h4>{{ article.titlePost }}</h4>
                            <p>{{ article.datePost }}</p>
                        </div>
                        <div class="mx-5 mt-3 mb-3">
                            <p>{{ article.chapoPost }}</p>
                        </div>
                        <div>
                            <p>{{ article.contentPost | raw }}</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="">
            <form action="/ClementGrenierDesrousseaux_P5_06052022/admin/article/{{ article.idPost }}" method="post">
                <div class="">
                    <label for="title" class="">Titre</label>
                    <input class="" type="text" value="{{ article.titlePost }}" name="articleTitle">
                </div>
                <div class="">
                    <label for="title" class="">Chapo</label>
                    <textarea class="" type="text" name="articleChapo">{{ article.chapoPost }}</textarea>
                </div>
                <div class="">
                    <label for="title" class="">Description</label>
                    <textarea class=l" type="text"
                              name="articleContent">{{ article.contentPost }}</textarea>
                </div>
                <input type="submit" value="Valider les modifications" class="">
            </form>
        </div>

    {% endfor %}


{% endblock %}
