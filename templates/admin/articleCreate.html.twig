{% extends "base.html.twig" %}

{% block title %} Page d'accueil {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="../../public/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"
          rel="stylesheet"/>
{% endblock %}

{% block scripts %}
    <script src="../../public/js/script.js"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-lg-2 col-md-3 bg-primary text-light">
                <h2 class="mt-2 d-flex justify-content-center text-center">Interface d'administration</h2>
                <ul class="list-group bg-primary mt-5">
                    <li class="list-group-item bg-primary"><a href="/ClementGrenierDesrousseaux_P5_06052022/admin"
                                                              class="text-decoration-none text-light"><i
                                    class="fa-solid fa-house mx-2"></i>Accueil</a></li>
                    <li class="list-group-item bg-primary"><a
                                href="/ClementGrenierDesrousseaux_P5_06052022/admin/articles"
                                class="text-decoration-none text-light"><i class="fa-solid fa-newspaper mx-2"></i>Articles
                        </a></li>

                    <li class="list-group-item bg-primary"><a href="#" class="text-decoration-none text-light"><i
                                    class="fa-solid fa-comments mx-2"></i>Commentaires</a></li>

                </ul>
            </div>
            <div class="col-lg-10 col-md-9">

                <form action="/ClementGrenierDesrousseaux_P5_06052022/admin/articles/createValidation" method="get">
                    <div class="form-group">
                        <label for="articleTitle">Titre de l'article</label>
                        <input type="text" class="form-control" id="articleTitle" aria-describedby="emailHelp"
                               name="articleTitle">
                    </div>
                    <div class="form-group">
                        <label for="articleChapo">Chapo de l'article</label>
                        <input type="text" class="form-control" id="articleChapo" name="articleChapo">
                    </div>
                    <div class="form-group">
                        <label for="articleContent">Contenu de l'article</label>
                        <input type="text" class="form-control" id="articleContent" name="articleContent">
                    </div>
                    <div class="form-group">
                        <label for="articleAuthor">Auteur</label>
                        <input type="text" class="form-control" id="articleAuthor" name="articleAuthor">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
    </div>

{% endblock %}
