{% extends "baseAdmin.html.twig" %}

{% block title %} Page d'accueil {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="../../public/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"
          rel="stylesheet"/>
{% endblock %}

{% block scripts %}
    <script src="../../public/js/script.js"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}

{% block content %}
    <div class="form-post-comment">
        <form action="/ClementGrenierDesrousseaux_P5_06052022/admin/articles/create" method="post">
            <div class="admin-modify-article-form-label-input">
                <label for="articleTitle">Titre de l'article</label>
                <input type="text" class="form-control" id="articleTitle" aria-describedby="emailHelp"
                       name="articleTitle">
            </div>
            <div class="admin-modify-article-form-label-input">
                <label for="articleChapo">Chapo de l'article</label>
                <input type="text" class="form-control" id="articleChapo" name="articleChapo">
            </div>
            <div class="admin-modify-article-form-label-input">
                <label for="articleContent">Contenu de l'article</label>

                <textarea class="form-control" type="text"
                          name="articleContent" rows="20" id="example"></textarea>
            </div>
            <div class="admin-modify-article-form-label-input">
                <label for="articleAuthor">Auteur</label>
                <input type="text" class="form-control" id="articleAuthor" name="articleAuthor">
            </div>
            <button type="submit" class="admin-modify-article-form-button">Cr√©er l'article</button>
        </form>
    </div>

{% endblock %}
