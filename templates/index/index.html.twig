{% extends "base.html.twig" %}

{% block title %} Page d'accueil {% endblock %}


{% block scripts %}
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}



{% block content %}
    <div class="display-post">
        {% for article in articles %}
            <div class="resume-post" id="post{{ article.idPost }}">
                <a href="/ClementGrenierDesrousseaux_P5_06052022/article/{{ article.idPost }}" class="resume-post-link">
                    <h2>
                        {{ article.titlePost | raw }}
                    </h2>
                    <div class="resume-post-link-date-author">
                        <div class="resume-post-link-date">
                            <i class="fa-solid fa-calendar-days"></i>
                            {{ article.datePost | date('d/m/Y') }}
                        </div>
                        <div class="resume-post-link-author">
                            <i class="fa-solid fa-user"></i>
                            {{ article.authorPost | raw }}
                        </div>
                    </div>
                    <div>
                        {{ article.chapoPost | raw }}
                    </div>
                </a>
            </div>


        {% endfor %}
    </div>

    <div class="newsletter">
        <div class="newsletter-content">
            <h2>Se tenir au courant des nouveaux articles</h2>
            <form action="#" id="newsletter-form">
                <input type="email" placeholder="adresse@email.com" id="newsletter-form-email">
                <input type="submit" value="S'inscrire" id="newsletter-form-submit">
            </form>
        </div>
    </div>
{% endblock %}
